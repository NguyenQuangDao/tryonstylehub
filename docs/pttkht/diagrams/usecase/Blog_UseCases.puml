@startuml
actor "Khách (Visitor)" as Visitor
actor "Người dùng (User)" as User
actor "Tác giả (Author)" as Author
actor "Quản trị (Admin)" as Admin

rectangle "Blog" {
  usecase "Xem danh sách bài viết" as UC_List
  usecase "Xem chi tiết bài viết" as UC_View
  usecase "Tìm kiếm bài viết" as UC_Search
  usecase "Bình luận bài viết" as UC_Comment
  usecase "Lưu/Yêu thích bài viết" as UC_Save
  usecase "Tạo bài viết" as UC_Create
  usecase "Chỉnh sửa bài viết" as UC_Update
  usecase "Xoá bài viết" as UC_Delete
  usecase "Xuất bản/Hủy xuất bản" as UC_Publish
  usecase "Kiểm duyệt bình luận" as UC_Moderate
  usecase "Quản lý thẻ/danh mục" as UC_Tags
}

Visitor --> UC_List
Visitor --> UC_View
Visitor --> UC_Search

User --> UC_Comment
User --> UC_Save
User --> UC_List
User --> UC_View
User --> UC_Search

Author --> UC_Create
Author --> UC_Update
Author --> UC_Delete
Author --> UC_Publish
Author --> UC_Tags

Admin --> UC_Moderate
Admin --> UC_Delete
Admin --> UC_Publish
Admin --> UC_Tags
@enduml
